{
    "compilerOptions": {
        "baseUrl": "./src",
        "typeRoots": [
            "./node_modules/@types",
            "types"
        ],
        "strictPropertyInitialization": false,
        "allowJs": true,
        "noEmit": true,
        "outDir": "./public/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}